<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#eaeaea"
    tools:context="com.example.zsq.easyshop.activity.MainActivity">

    <!--头像区域-->
    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="200dp">
        <!--山水动画-->
        <com.example.zsq.easyshop.water.WaterScreenView
            android:id="@+id/waterScreenView"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="@drawable/water_scene_background"/>
        <!--头像-->
        <com.pkmmte.view.CircularImageView
            android:layout_gravity="center"
            android:id="@+id/me_civ_touxiang"
            android:layout_width="120dp"
            android:layout_height="120dp"
            android:scaleType="centerInside"
            android:src="@mipmap/morentouxiang"
            app:border="true"
            app:border_color="#16f5f5f5"
            app:border_width="6dp"
            app:selector="true"
            app:selector_color="#4D000000"
            app:selector_stroke_color="#16f5f5f5"
            app:selector_stroke_width="6dp"
            app:shadow="false"  />

        <TextView
            android:layout_marginBottom="8dp"
            android:layout_gravity="bottom|center_horizontal"
            android:id="@+id/me_tv_denglu"
            android:layout_marginTop="10dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="登录|注册"
            android:textColor="@color/white"
            android:textSize="20sp"/>
    </FrameLayout>
    <!--列表区域-->
    <TextView
        android:id="@+id/tv_person_info"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableRight="@drawable/selector_item_go"
        android:gravity="center|start"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:text="个人信息"
        android:textColor="#555353"
        android:textSize="18sp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_person_goods"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableRight="@drawable/selector_item_go"
        android:gravity="center|start"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:text="我的商品"
        android:textColor="#555353"
        android:textSize="18sp"
        android:layout_marginTop="6dp"/>

    <TextView
        android:id="@+id/tv_goods_upload"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@color/white"
        android:drawableRight="@drawable/selector_item_go"
        android:gravity="center|start"
        android:paddingLeft="20dp"
        android:paddingRight="10dp"
        android:text="商品上传"
        android:textColor="#555353"
        android:textSize="18sp"
        android:layout_marginTop="6dp"/>


</LinearLayout>
