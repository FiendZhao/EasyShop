<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="0dp"
    android:layout_weight="1">
    <!--底部菜单栏-->
    <LinearLayout
        android:id="@+id/main_linearLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:orientation="horizontal"
        android:background="#fcfcfc"
        android:padding="5dp"
        >
        <TextView
            android:id="@+id/tv_shop"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/selector_ic_shopping"
            android:text="市场"
            android:textColor="#FF8F8F8F"
            android:textStyle="bold"
            android:gravity="center"/>
        <TextView
            android:id="@+id/tv_message"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/selector_ic_message"
            android:gravity="center"
            android:text="消息"
            android:textColor="#FF8F8F8F"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_mail_list"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/selector_ic_mail_list"
            android:gravity="center"
            android:text="通讯录"
            android:textColor="#FF8F8F8F"
            android:textStyle="bold" />
        <TextView
            android:id="@+id/tv_me"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_margin="5dp"
            android:drawableTop="@drawable/selector_ic_me"
            android:gravity="center"
            android:text="我的"
            android:textColor="#FF8F8F8F"
            android:textStyle="bold"/>
    </LinearLayout>
</RelativeLayout>